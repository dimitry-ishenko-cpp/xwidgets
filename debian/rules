#!/usr/bin/make -f

%:
	dh $@

ifeq (,$(findstring nocheck, $(DEB_BUILD_OPTIONS)))

override_dh_auto_configure:
	dh_auto_configure -- -DDISABLE_ARCH_NATIVE=ON -DGTEST_SRC_DIR=/usr/src/googletest

override_dh_auto_test:
	cd obj-$(DEB_HOST_MULTIARCH) && LD_LIBRARY_PATH=`pwd` test/test_xwidgets

else

override_dh_auto_configure:
	dh_auto_configure -- -DDISABLE_ARCH_NATIVE=ON

endif
